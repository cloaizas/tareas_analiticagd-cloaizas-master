u = LOAD 'data.csv' USING PigStorage(',') 
    AS (id:int, 
        firstname:CHARARRAY, 
        surname:CHARARRAY, 
        birthday:CHARARRAY, 
        color:CHARARRAY, 
        quantity:INT);
--
-- >>> Escriba su respuesta a partir de este punto <<<
--
datos = FOREACH u GENERATE birthday,SUBSTRING(birthday,0,4) as mes1;
datos1 = GROUP datos BY (mes1);
datos2 = FOREACH datos1 GENERATE group,COUNT(datos.mes1) AS Total;
STORE datos2 INTO './output' USING PigStorage(',');